<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/artistFrameLayout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".artistSearchFragment">


    <LinearLayout
        android:id="@+id/artistLLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#010205"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#264160"
            android:text="Artist Search"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#e3fefd"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/artistLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#325c80"
                android:backgroundTint="#325c80"
                android:elevation="4dp"
                android:hint="Enter your Favorite artist"
                android:textColor="#42a5f5"
                android:textColorHint="#42a5f5" />

            <Button
                android:id="@+id/artistfragSearch"
                android:layout_width="45dp"

                android:layout_height="45dp"
                android:background="#2196f3"
                android:backgroundTint="#2196f3"
                android:elevation="4dp"
                android:hint="Go!"
                android:textColor="#e3fefd"
                android:textColorHint="@color/design_default_color_background"
                android:textColorLink="#2196f3" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/artistSearchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</FrameLayout>